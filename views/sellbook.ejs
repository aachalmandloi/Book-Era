        <div class="temp">
          <div>
            <img src="/images/2002.i515.001_modern_students_flat_icons-13.jpg" height="500px" width="500px">
          </div>
  
          <form action="/book/add"  method="post" enctype="multipart/form-data">
            <div class="container1">
              
      
                      <div class="bookname">
                        <h3>Book Name&#160; &#160;</h3>
    
                            <!-- <i class="fa fa-book lock" ></i> -->
                            <input type="text" placeholder="Enter Book Name" name="bookname" required="true">
                      </div>
    
                      <div class="authorname">
                        <h3>Author Name&#160; &#160;</h3>  
                        <!-- <i class="fa fa-user lock"></i> -->
                        <input type="text" placeholder="Enter Author Name" name="authorname" required="true">
                      </div>
    
                      <div class="year">
                        <h3>Edition Year&#160; &#160;</h3> 
                      
                        <!-- <i class="fa fa-graduation-cap lock" ></i> -->
                        <input type="number" placeholder="YYYY"  name="year"  required="true">
                      </div>
    
                      <div class="rent-sell">
                        <h3>Do you want to sell or rent&#160; &#160; </h3> 
                        <!-- <i class="fa fa-check-square-o lock" ></i> -->
                        <input type="radio"  class="radio-butto "  name="sell">
                        <label>&#160; Sell  </label>
                        &#160;&#160;
                        <input type="radio" class="radio-button" name="rent">
                        <label>&#160; Rent </label>
                      </div>
                      <div class="price">
                        <h3> Price&#160; &#160;</h3> 
                        <!-- <i class="fa fa-inr lock"></i> -->
                        <input type="number" placeholder="Price " name="price"  required="true">
                      </div>
    
                      <div class="category">
                        <h3>Category of Book &#160; &#160;</h3> 
                        <!-- <i class="fa fa-list-alt lock"></i> -->
                        <select class="bookcategory" name="category"  required="true">
                            <option>Select the category of book</option>
                            <option>Mechanical Engineering</option>
                            <option>Computer Science Engineering</option>
                            <option>Civil Engineering</option>
                            <option>Electrical Engineering</option>
                            <option>Novel and fictional</option>
                            <option>Exam Refrences</option>
                            
                        </select>
                      </div>
    
                      <div class="contact">
                        <h3>Contact Details&#160; &#160;</h3> 
                        <!-- <i class="fa fa-envelope-open lock" ></i> -->
                        <input type="email" placeholder="Enter your email" class="email" name="email"  required="true">
                        <span>
                        <!-- <i class="fa fa-phone lock" ></i> -->
                        <input type="number" placeholder="Enter your contact number" class="contact" name="contact" id="contactd"  required="true">
                        </span>
                      </div>
    
                      <div class="bookimage">
                      
                      <h3> Upload Book Image&#160; &#160;</h3>  
                      &#160; &#160;
                      &#160; &#160; &#160;
                      
